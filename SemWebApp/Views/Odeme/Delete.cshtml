// Views/Odeme/Delete.cshtml
@model SemWebApp.Models.Odeme

@{
    ViewData["Title"] = "Ödeme Sil";
}

<h1>Ödeme Sil</h1>

<h3>Bu ödemeyi silmek istediğinizden emin misiniz?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Miktar)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Miktar) ₺</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.OdemeTarihi)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.OdemeTarihi)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.KullaniciId)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.KullaniciId)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
    </form>
</div>