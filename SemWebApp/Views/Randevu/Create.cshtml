// Views/Randevu/Create.cshtml
@model SemWebApp.Models.Randevu

@{
    ViewData["Title"] = "Yeni Randevu";
}

<h1>Yeni Randevu Ekle</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="RandevuTarihi" class="control-label"></label>
                <input asp-for="RandevuTarihi" class="form-control" type="date" />
                <span asp-validation-for="RandevuTarihi" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="KullaniciId" class="control-label"></label>
                <input asp-for="KullaniciId" class="form-control" />
                <span asp-validation-for="KullaniciId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DersId" class="control-label"></label>
                <input asp-for="DersId" class="form-control" />
                <span asp-validation-for="DersId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}