@model SemWebApp.Models.Kullanici

@{
    ViewData["Title"] = "Kullanıcı Sil";
}

<h1>Kullanıcı Sil</h1>

<h3>Bu kullanıcıyı silmek istediğinizden emin misiniz?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Ad)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Ad)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Soyad)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Soyad)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.KullaniciAdi)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.KullaniciAdi)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Telefon)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefon)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DogumTarihi)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.DogumTarihi)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Rol)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Rol)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
    </form>
</div>